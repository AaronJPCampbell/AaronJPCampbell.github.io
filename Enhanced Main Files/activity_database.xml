<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:background="#ddd">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:columnCount="2">
        <TextView
            android:id="@+id/titleText"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="New Weight and Calorie Entries"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:background="#aaa"/>
        <TextView
            android:id="@+id/newWeightTitle"
            android:layout_width="110dp"
            android:text="Weight"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/newWeight"
            android:layout_width="220dp"
            android:hint="Weight" />
        <TextView
            android:id="@+id/newWeightTitle2"
            android:layout_width="110dp"
            android:text="Calories"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/newCalories"
            android:layout_width="220dp"
            android:hint="Calories"/>
        <Button
            android:id="@+id/newWeightButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#494"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="Record Weight"/>
        <Button
            android:id="@+id/newCaloriesButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#494"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="Record Calorie Intake"/>
        <TextView
            android:id="@+id/blankSpace1"
            android:layout_columnSpan="2"
            android:textSize="10sp"
            android:layout_gravity="left"
            android:textColor="#000" />
        <TextView
            android:id="@+id/titleText2"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="Update Weight and Calorie Entries"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:background="#aaa"/>
        <TextView
            android:id="@+id/hintText"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:text="Uses values under the New Data section"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/newDateTitle2"
            android:layout_width="110dp"
            android:text="Date"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/newDate"
            android:layout_width="220dp"
            android:hint="YYYY-MM-DD"/>
        <Button
            android:id="@+id/updateWeightButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#994"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="Update Weight Entry"/>
        <Button
            android:id="@+id/updateCaloriesButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#994"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="Update Calorie Entry"/>
        <Button
            android:id="@+id/deleteWeightButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#944"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="Remove Weight Entry"/>
        <Button
            android:id="@+id/deleteCaloriesButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#944"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="Remove Calorie Entry"/>
        <Button
            android:id="@+id/viewWeightButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#449"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="View Weight Entries"/>
        <Button
            android:id="@+id/viewCaloriesButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#449"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="View Calorie Entries"/>
        <TextView
            android:id="@+id/blankSpace2"
            android:layout_columnSpan="2"
            android:textSize="10sp"
            android:layout_gravity="left"
            android:textColor="#000" />
        <TextView
            android:id="@+id/titleText3"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="Weight and Calorie Data"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:background="#aaa"/>
        <TextView
            android:id="@+id/calorieBudgetTitle"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:text="Remaining Calories (Today):"
            android:layout_height="25dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/calorieBudgetTextView"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_height="25dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/expectedWeightLossTitle"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:text="Expected Weight Loss (Today):"
            android:layout_height="25dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/XWLTextView"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_height="25dp"
            android:textColor="#000"/>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/weightGraph"
            android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <Button
            android:id="@+id/viewTargetWeightButton"
            android:layout_columnSpan="2"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="#555"
            android:textColor="#ddd"
            android:textSize="15sp"
            android:text="View Target Weight Data"/>
    </GridLayout>
</ScrollView>